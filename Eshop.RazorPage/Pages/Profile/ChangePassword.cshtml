@page
@model Eshop.RazorPage.Pages.Profile.ChangePasswordModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="row mb-5">

    <partial name="Shared/Profile/_ProfileSideBar" />
    <div class="col-lg-9 col-md-8">
        <div class="row mb-4">
            <div class="col-12">
                <div class="section-title mb-2">
                    @ViewData["Title"]
                </div>
                <section class="shadow-around p-3">
                    <form method="post">
                        <div class="row">
                            <div class="col-lg-12 mb-3">
                                @Html.EditorFor(x=>x.CurrentPassword)
                            </div>
                            
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(x=>x.Password)
                            </div>
                            
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(x=>x.ConfirmedPassword)
                            </div>
                           
                            <div class="col-12">
                                <div class="form-element-row text-left">
                                    <button type="submit" class="btn-element btn-success-element">
                                        <i class="fad fa-user-edit"></i>
                                        ذخیره تغییرات
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    </div>


