
@model Eshop.RazorPage.ViewModels.Users.Addresses.CreateUserAddressViewModel

<div class="modal fade" id="editAddressModal" tabindex="-1" aria-labelledby="editAddressModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAddressModalLabel">ویرایش آدرس</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="#">
                    <div class="row">

                        <div class="col-lg-6 mb-3">
                            @Html.EditorFor(x => x.Shire)
                        </div>
                        <div class="col-lg-6 mb-3">
                            @Html.EditorFor(x => x.City)
                        </div>
                        
                        <div class="col-lg-12 mb-3">
                            @Html.EditorFor(x => x.PostalCode)
                        </div>
                        
                        <div class="col-lg-12 mb-3">
                            @Html.EditorFor(x => x.PostalAddress)
                        </div>
                        
                        <div class="col-lg-6 mb-3">
                            @Html.EditorFor(x => x.Name)
                        </div>
                        
                        <div class="col-lg-6 mb-3">
                            @Html.EditorFor(x => x.Family)
                        </div>
                        
                        <div class="col-lg-6 mb-3">
                            @Html.EditorFor(x => x.PhoneNumber)
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">
                    ذخیره تغییرات <i class="fad fa-money-check-edit"></i>
                </button>
            </div>
        </div>
    </div>
</div>
