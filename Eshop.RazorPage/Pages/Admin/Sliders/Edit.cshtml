@page "{id}"
@using Eshop.RazorPage.Infrastructure
@model Eshop.RazorPage.Pages.Admin.Sliders.EditModel
@{
}

@{
    ViewData["title"] = "ویرایش اسلایدر";
}


<form method="post" class="card " enctype="multipart/form-data">
    @Html.HiddenFor(x=>x.ImageName)
    <div class="row card-body">
        <div class="col-md-6">
            @Html.EditorFor(x => x.Title)
        </div>

        <div class="col-md-6">
            @Html.EditorFor(x => x.Link)
        </div>

        <div class="col-md-12">
            @Html.EditorFor(x => x.ImageFileName)
        </div>
    </div>
    <div class="col-12">
        <img src="@Directories.GetSlider(Model.ImageName)" style="width: 100%; height: 300px" alt="Alternate Text"/>
    </div>
    <div class="card-footer text-left ">
        <button type="submit" class="btn btn-success">ثبت اطلاعات </button>
    </div>
</form>
