@page
@model Eshop.RazorPage.Pages.Admin.Categories.IndexModel
@{
}
<h3>مدیریت اسلایدر ها</h3>
<a asp-page="Add" class="btn btn-success mb-2">افزودن اسلایدر</a>
<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0">
        <thead>
            <tr>
                <th>عنوان</th>
                <th>Slug</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td > @item.Title</td>
                    <td > @item.Slug</td>
                    <td >
                        <a  asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">ویرایش</a>
                        <a class="btn btn-sm btn-success" asp-page="Add" asp-route-parentId="@item.Id">افزودن زیرگروه</a>
                    </td>
                </tr>
            }
            @if (Model.Categories.Any()==false)
            {
                <tr class="text-center">
                    <td colspan="3">
                        <h3 class="text-danger">ایتمی برای نمایش وجود ندارد</h3>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>